<% layout('layouts/boilerplate') %>

    <div id="top" class="vh-100 d-flex flex-column">
        <div>
            <% for(let convo of arg.convos){ %>
                <%if(currentUser.username==convo.username){%>
                    <div class=" mb-3 d-flex flex-row-reverse " style="color: lightcoral;">
                        <h1>
                            <%=convo.body%>
                        </h1>
                    </div>
                    <%}else{%>
                        <h1>
                            <%=convo.body%>
                        </h1>
                        <% } %>
                            <% } %>
        </div>
        <div class="mt-auto " style="margin-bottom: 75px;">
            <form action="/vendors/<%=arg.vendorname%>/<%=arg.username%>/convos" method="POST">
                <div class="row">
                    <div class="col-8 offset-2"><input class="form-control" type="text" name="convo[body]">
                    </div>
                    <div class="col-2">
                        <button class="btn btn-success">
                            <i class="fa fa-paper-plane" style="font-size:16px;color:red"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>