<% layout('layouts/boilerplate') %>
    <h1>All Vendors
    </h1>
    <div style="padding-bottom: 50px;">
        <% for (let vendor of vendors) {%>
            <div class="card mb-3 " style="margin-bottom: 100px;">
                <div class=" row">
                    <div class="col-md-4 ">
                        <img class="img-fluid" alt="alt" src="<%= vendor.image %>">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= vendor.title %>
                            </h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= vendor.location%>
                                </small>
                            </p>
                            <p class="card-text">
                                <%= vendor.service %>
                            </p>
                            <p class="card-text">
                                <%= vendor.username %>
                            </p>

                        </div>
                    </div>
                    <div class="col-md-1">
                        <a href="/vendors/<%=vendor.username%>"><i class="fa fa-comments-o"
                                style="font-size:48px;color:red"></i></a>
                    </div>
                </div>
            </div>
            <% } %>
    </div>