<% layout('layouts/boilerplate') %>
    <h1>All Clients
    </h1>
    <% for (let room of rooms) {%>
        <div class="card mb-3 ">
            <div class="row">
                <div class="col-md-4">
                    <h2 class="card-title">
                        <%= room.username %>
                    </h2>
                </div>
                <div class="col-md-7">
                    <h4 class="card-text">
                        <%=room.convos[room.convos.length-1].body%>
                    </h4>

                </div>
                <div class="col-md-1">
                    <a href="/vendors/<%=room.vendorname%>/clients/<%=room.username%>"><i class="fa fa-comments-o"
                            style="font-size:48px;color:red"></i></a>
                </div>
            </div>
        </div>
        <% } %>